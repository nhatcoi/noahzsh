# =============================================================================
# NoahZSH Command Line Tool (nsh)
# =============================================================================

# Prevent multiple loading
if [[ -z "$NOAHZSH_NSH_LOADED" ]]; then
    export NOAHZSH_NSH_LOADED=1

# NoahZSH directory
NOAHZSH_DIR="$HOME/noahzsh"
NOAHZSH_CUSTOM="$NOAHZSH_DIR/zsh/custom"

# Main nsh function
nsh() {
    case "$1" in
        --version|-v)
            echo "NoahZSH v1.0.0"
            ;;
            
        --help|-h)
            echo "NoahZSH Command Line Tool"
            echo ""
            echo "Usage: nsh [command]"
            echo ""
            echo "Commands:"
            echo "  --version, -v     Show version information"
            echo "  --help, -h        Show this help message"
            echo "  open              Open configuration directory in editor"
            echo "  save              Reload zsh configuration"
            echo "  docs              Open documentation"
            echo "  alias             Show all available aliases"
            echo "  config            Show current configuration"
            echo "  update            Update NoahZSH to latest version"
            echo "  status            Show installation status"
            echo "  clean             Clean up temporary files"
            echo "  backup            Backup current configuration"
            echo "  restore           Restore from backup"
            echo "  install-deps      Install welcome banner dependencies"
            echo "  terminal-setup    Setup terminal for best banner display"
            echo "  uninstall         Uninstall NoahZSH completely"
            ;;
            
        open)
            if command -v code >/dev/null 2>&1; then
                code "$NOAHZSH_CUSTOM"
                echo "‚úÖ Opened NoahZSH config in VS Code"
            elif command -v vim >/dev/null 2>&1; then
                vim "$NOAHZSH_CUSTOM"
            else
                echo "‚ùå No editor found. Please install VS Code or Vim"
            fi
            ;;
            
        save|reload)
            source ~/.zshrc
            # echo "‚úÖ NoahZSH configuration reloaded"
            ;;
            
        docs)
            if command -v open >/dev/null 2>&1; then
                open "https://github.com/nhatcoi/noahzsh"
            elif command -v xdg-open >/dev/null 2>&1; then
                xdg-open "https://github.com/nhatcoi/noahzsh"
            else
                echo "üìö Documentation: https://github.com/nhatcoi/noahzsh"
            fi
            ;;
            
        alias)
            echo "üìã Available Aliases:"
            echo ""
            echo "üîß System:"
            echo "  c          clear"
            echo "  h          history"
            echo "  q          exit"
            echo "  ll         ls -alh"
            echo ""
            echo "üìÅ Navigation:"
            echo "  ..         cd .."
            echo "  ...        cd ../.."
            echo "  ~          cd ~"
            echo "  -          cd -"
            echo "  p          pwd"
            echo ""
            echo "üîß Git:"
            echo "  g          git"
            echo "  gs         git status"
            echo "  ga         git add"
            echo "  gcm        git commit -m"
            echo "  gp         git push"
            echo "  gpl        git pull"
            echo "  glog       git log --oneline --decorate --graph"
            echo ""
            echo "üê≥ Docker:"
            echo "  d          docker"
            echo "  dc         docker-compose"
            echo "  dps        docker ps"
            echo ""
            echo "üì¶ NPM:"
            echo "  ni         npm install"
            echo "  nrs        npm run start"
            echo "  nrb        npm run build"
            echo ""
            echo "üí° Type 'alias' to see all aliases"
            ;;
            
        config)
            echo "‚öôÔ∏è  NoahZSH Configuration:"
            echo ""
            echo "üìÅ Installation: $NOAHZSH_DIR"
            echo "üîß Custom dir:   $NOAHZSH_CUSTOM"
            echo "üìù Main config:  ~/.zshrc"
            echo "üé® Theme:        robbyrussell"
            echo "üîå Plugins:      zsh-autosuggestions"
            echo ""
            echo "üìã Config files:"
            echo "  üìÅ plugins/"
            echo "    ‚Ä¢ oh-my-zsh.zsh    - Oh My Zsh settings"
            echo "    ‚Ä¢ autosuggestions.zsh - Autosuggestions config"
            echo "  üìÅ functions/"
            echo "    ‚Ä¢ nsh.zsh          - NoahZSH command line tool"
            echo "  üìÅ themes/           - Custom themes (empty)"
            echo "  üìÅ completions/      - Custom completions (empty)"
            echo "  ‚Ä¢ aliases.zsh        - Custom aliases"
            echo "  ‚Ä¢ export.zsh         - Environment variables"
            ;;
            
        update)
            echo "üîÑ Updating NoahZSH..."
            cd "$NOAHZSH_DIR"
            if git pull origin main; then
                echo "‚úÖ NoahZSH updated successfully"
                echo "üí° Run 'nsh save' to reload configuration"
            else
                echo "‚ùå Update failed. Please check your internet connection"
            fi
            ;;
            
        status)
            echo "üìä NoahZSH Status:"
            echo ""
            
            # Check installation
            if [[ -d "$NOAHZSH_DIR" ]]; then
                echo "‚úÖ NoahZSH installed: $NOAHZSH_DIR"
            else
                echo "‚ùå NoahZSH not found"
            fi
            
            # Check .zshrc link
            if [[ -L "$HOME/.zshrc" ]]; then
                echo "‚úÖ .zshrc linked correctly"
            else
                echo "‚ö†Ô∏è  .zshrc not linked"
            fi
            
            # Check Oh My Zsh
            if [[ -d "$HOME/.oh-my-zsh" ]]; then
                echo "‚úÖ Oh My Zsh installed"
            else
                echo "‚ùå Oh My Zsh not found"
            fi
            
            # Check autosuggestions
            if [[ -d "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions" ]]; then
                echo "‚úÖ zsh-autosuggestions installed"
            else
                echo "‚ùå zsh-autosuggestions not found"
            fi
            ;;
            
        clean)
            echo "üßπ Cleaning NoahZSH..."
            
            # Clean backup files
            find "$NOAHZSH_DIR" -name "*.backup" -delete 2>/dev/null
            find "$NOAHZSH_DIR" -name "*.bak" -delete 2>/dev/null
            find "$NOAHZSH_DIR" -name "*.tmp" -delete 2>/dev/null
            
            # Clean .DS_Store files
            find "$NOAHZSH_DIR" -name ".DS_Store" -delete 2>/dev/null
            
            echo "‚úÖ Cleanup completed"
            ;;
            
        backup)
            local backup_dir="$NOAHZSH_DIR/backups"
            local timestamp=$(date +%Y%m%d_%H%M%S)
            local backup_file="$backup_dir/noahzsh_backup_$timestamp.tar.gz"
            
            mkdir -p "$backup_dir"
            
            echo "üíæ Creating backup..."
            tar -czf "$backup_file" -C "$NOAHZSH_DIR" zsh/
            
            if [[ -f "$backup_file" ]]; then
                echo "‚úÖ Backup created: $backup_file"
            else
                echo "‚ùå Backup failed"
            fi
            ;;
            
        restore)
            local backup_dir="$NOAHZSH_DIR/backups"
            
            if [[ ! -d "$backup_dir" ]]; then
                echo "‚ùå No backup directory found"
                return 1
            fi
            
            echo "üìã Available backups:"
            ls -la "$backup_dir"/*.tar.gz 2>/dev/null || echo "No backups found"
            echo ""
            echo "üí° To restore: tar -xzf $backup_dir/backup_file.tar.gz -C $NOAHZSH_DIR"
            ;;
            
        install-deps)
            echo "üîß Installing welcome banner dependencies..."
            if [[ -f "$NOAHZSH_DIR/install-dependencies.sh" ]]; then
                chmod +x "$NOAHZSH_DIR/install-dependencies.sh"
                "$NOAHZSH_DIR/install-dependencies.sh"
            else
                echo "‚ùå Dependencies installer not found"
            fi
            ;;
            
        terminal-setup)
            echo "üñ•Ô∏è  Setting up terminal for best banner display..."
            if [[ -f "$NOAHZSH_DIR/terminal-setup.sh" ]]; then
                chmod +x "$NOAHZSH_DIR/terminal-setup.sh"
                "$NOAHZSH_DIR/terminal-setup.sh"
            else
                echo "‚ùå Terminal setup script not found"
            fi
            ;;
            
        uninstall)
            echo "‚ö†Ô∏è  WARNING: This will completely remove NoahZSH and all related components!"
            echo ""
            echo "This will remove:"
            echo "  ‚Ä¢ NoahZSH directory: $NOAHZSH_DIR"
            echo "  ‚Ä¢ Oh My Zsh directory: $HOME/.oh-my-zsh"
            echo "  ‚Ä¢ .zshrc symbolic link"
            echo "  ‚Ä¢ All NoahZSH configurations"
            echo "  ‚Ä¢ All Oh My Zsh plugins and themes"
            echo ""
            echo "This action cannot be undone!"
            echo ""
            
            # Ask for confirmation
            echo -n "Are you sure you want to completely uninstall NoahZSH? (y/N): "
            read response
            echo ""
            
            if [[ $response =~ ^[Yy]$ ]]; then
                echo "üóëÔ∏è  Uninstalling NoahZSH and all related components..."
                
                # Remove .zshrc link if it points to NoahZSH
                if [[ -L "$HOME/.zshrc" ]] && [[ "$(readlink "$HOME/.zshrc")" == *"noahzsh"* ]]; then
                    rm "$HOME/.zshrc"
                    echo "‚úÖ Removed .zshrc symbolic link"
                fi
                
                # Remove NoahZSH directory
                if [[ -d "$NOAHZSH_DIR" ]]; then
                    rm -rf "$NOAHZSH_DIR"
                    echo "‚úÖ Removed NoahZSH directory"
                fi
                
                # Remove Oh My Zsh directory
                if [[ -d "$HOME/.oh-my-zsh" ]]; then
                    rm -rf "$HOME/.oh-my-zsh"
                    echo "‚úÖ Removed Oh My Zsh directory"
                fi
                
                # Remove zsh history if it exists
                if [[ -f "$HOME/.zsh_history" ]]; then
                    rm "$HOME/.zsh_history"
                    echo "‚úÖ Removed zsh history"
                fi
                
                # Restore original .zshrc if backup exists
                if [[ -f "$HOME/.zshrc.backup" ]]; then
                    mv "$HOME/.zshrc.backup" "$HOME/.zshrc"
                    echo "‚úÖ Restored original .zshrc from backup"
                else
                    # Create a basic .zshrc if no backup exists
                    cat > "$HOME/.zshrc" << 'EOF'
# Basic ZSH configuration
export PATH="$HOME/bin:/usr/local/bin:$PATH"

# History configuration
HISTSIZE=1000
SAVEHIST=1000
HISTFILE="$HOME/.zsh_history"

# Basic aliases
alias ll="ls -alh"
alias la="ls -A"
alias l="ls -CF"

# Enable colors
autoload -U colors && colors
EOF
                    echo "‚úÖ Created basic .zshrc"
                fi
                
                echo ""
                echo "üéâ NoahZSH and all related components have been completely uninstalled!"
                echo "üí° Please restart your terminal or run: source ~/.zshrc"
                echo ""
                echo "To reinstall NoahZSH:"
                echo "curl -fsSL https://raw.githubusercontent.com/nhatcoi/noahzsh/main/bootstrap.sh | bash"
                echo ""
                echo "‚ö†Ô∏è  Note: All Oh My Zsh plugins and themes have been removed."
            else
                echo ""
            fi
            ;;
            
        *)
            echo "‚ùå Unknown command: $1"
            echo "üí° Run 'nsh --help' for available commands"
            ;;
    esac
}

# Create aliases for common commands
alias nsh-open="nsh open"
alias nsh-save="nsh save"
alias nsh-docs="nsh docs"
alias nsh-alias="nsh alias"
alias nsh-config="nsh config"
alias nsh-status="nsh status"

fi
